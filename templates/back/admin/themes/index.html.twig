{% extends 'base_back.html.twig' %}

{% block body %}

<div class="container flex flex-row min-h-100">

    {{ include('/components/sideBarAdmin.html.twig') }}

    <div class="flex flex-col  ml-32 pt-12">

            <h1 class="text-3xl text-slate-800 mb-4 font-bold ">Gestion des thèmes Thanatos</h1>

            <a href="{{ path("create_theme") }}">
                <button  type="button" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">
                    Ajouter un thème
                </button>
            </a>

            <div class="flex flex-col mt-4">
                <div class="overflow-x-auto shadow-md sm:rounded-lg">
                    <div class="inline-block min-w-full align-middle">
                        <div class="overflow-hidden ">
                            <table class="min-w-full divide-y divide-gray-200 table-fixed dark:divide-gray-700">
                                <thead class="bg-gray-100 dark:bg-gray-700">
                                <tr>
                                    <th scope="col" class="py-3 px-6 text-xs font-medium tracking-wider text-left text-gray-700 uppercase dark:text-gray-400">
                                        Nom
                                    </th>
                                    <th scope="col" class=" py-3 px-6 text-xs font-medium tracking-wider text-left text-gray-700 uppercase dark:text-gray-400">
                                        Description
                                    </th>
                                    <th scope="col" class="py-3 px-6 text-xs font-medium tracking-wider text-left text-gray-700 uppercase dark:text-gray-400">
                                        Type
                                    </th>
                                    <th scope="col" class="py-3 px-6 text-xs font-medium tracking-wider text-left text-gray-700 uppercase dark:text-gray-400">
                                        Prix
                                    </th>
                                    <th scope="col" class="p-4">
                                        <span class="sr-only">Edit</span>
                                    </th>
                                </tr>
                                </thead>
                                <tbody class="bg-white divide-y divide-gray-200 dark:bg-gray-800 dark:divide-gray-700">
                                {% if themes %}
                                    {% for theme in themes %}
                                        <tr class="hover:bg-gray-100 dark:hover:bg-gray-700">
                                            <td class="py-4 px-6 text-sm font-medium text-gray-900 whitespace-nowrap dark:text-white">{{ theme.name }}</td>
                                            <td class="min-w-[35rem] max-w-[36rem] truncate py-4 px-6 text-sm font-medium text-gray-500 whitespace-nowrap dark:text-white">{{ theme.description }}</td>
                                            <td class="py-4 px-6 text-sm font-medium text-gray-500 whitespace-nowrap dark:text-white">{{ theme.type }}</td>
                                            <td class="py-4 px-6 text-sm font-medium text-gray-500 whitespace-nowrap dark:text-white">{{ theme.price }} €</td>
                                            <td class="py-4 px-6 text-sm font-medium text-right whitespace-nowrap">
{#                                                <a href="{{ path("details_theme", {"id" : theme.id}) }}" class="text-slate-600 mr-2 dark:text-slate-500 hover:underline">Détails</a>#}
                                                <a href="{{ path("modify_theme", {"id" : theme.id}) }}" class="text-blue-600 mr-2 dark:text-blue-500 hover:underline">Modifier</a>
                                                <a href="{{ path("delete_theme", {"id" : theme.id}) }}" class="text-red-600 dark:text-red-500 hover:underline">Supprimer</a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                {% else %}
                                    <tr class="hover:bg-gray-100 dark:hover:bg-gray-700">
                                        <td colspan="5" class="py-4 px-6 text-sm font-medium text-gray-900 whitespace-nowrap dark:text-white">Thanatos ne propose aucun thèmes.</td>
                                    </tr>
                                {% endif %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
