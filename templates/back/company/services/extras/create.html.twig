{% extends 'base_back.html.twig' %}

{% block body %}

    <div class="px-10 py-4">

        <h1 class="text-3xl text-slate-800 mb-4 font-bold ">Ajouter un nouveau Extra chez Thanatos</h1>

        {{ form_start(form) }}

        {{ form_row(form.name) }}
        {{ form_row(form.description) }}
        {{ form_row(form.price) }}

        <div class="flex flex-col">
            {{ form_label(form.media) }}
            {{ form_widget(form.media) }}
            {{ form_errors(form.media) }}
            {{ form_help(form.media) }}
        </div>

        <div class="flex flex-wrap mt-5">
            <button type="submit" class="text-white bg-gradient-to-r from-blue-500 via-blue-600 to-blue-700 hover:bg-gradient-to-br focus:ring-4 focus:ring-blue-300 dark:focus:ring-blue-800 shadow-lg shadow-blue-500/50 dark:shadow-lg dark:shadow-blue-800/80 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2 ">Valider</button>
            <a href="{{ path("view_extras") }}" class="ml-2 text-gray-900 hover:text-white border border-gray-800 hover:bg-gray-900 focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2 dark:border-gray-600 dark:text-gray-400 dark:hover:text-white dark:hover:bg-gray-600 dark:focus:ring-gray-800">Annuler</a>
        </div>

        {{ form_end(form) }}

    </div>

{% endblock %}
