{% extends 'base_back.html.twig' %}

{% block body %}
    <div class=" flex flex-row h-100">
        {{ include('components/sideBarPro.html.twig') }}
        <div class="h-screen px-10 py-4 flex flex-col justify-between w-full">
            <div>
                <h1 class="text-3xl text-slate-800 mb-4 font-bold py-6">Gestion des extras de vos modèles</h1>

                <section class="flex flex-col min-h-[150px] bg-gray-100 p-4 rounded-lg shadow-md mb-6">
                    <p class="text-slate-700 text-lg font-light mb-2">
                        Bienvenues dans le panneau de gestion des extras d'un model
                    </p>
                    <p class="text-slate-700 text-lg font-light mb-2">
                        Ce sont tous les extras que vous avez décidé d'appliquer à chaque modèle
                    </p>
                </section>

                <div class="flex flex-col mt-6">
                    <div class="overflow-x-auto shadow-md sm:rounded-lg">
                        <div class="inline-block min-w-full align-middle">
                            <div class="overflow-hidden ">
                                <table class="min-w-full divide-y divide-gray-200 table-fixed dark:divide-gray-700">
                                    <thead class="bg-gray-100 dark:bg-gray-700">
                                        <tr>
                                            <th scope="col"
                                                class="py-3 px-6 text-xs font-medium tracking-wider text-left text-gray-700 uppercase dark:text-gray-400">
                                                Nom model
                                            </th>
                                            <th scope="col"
                                                class="py-3 px-6 text-xs font-medium tracking-wider text-left text-gray-700 uppercase dark:text-gray-400">
                                                Description model
                                            </th>
                                            <th scope="col"
                                                class="py-3 px-6 text-xs font-medium tracking-wider text-left text-gray-700 uppercase dark:text-gray-400">
                                                Model de sépulture
                                            </th>
                                            <th scope="col" class="p-4">
                                                <span class="sr-only">Edit</span>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody class="bg-white divide-y divide-gray-200 dark:bg-gray-800 dark:divide-gray-700">
                                        {% if models %}
                                            {% for model in models %}
                                                <tr class="hover:bg-gray-100 dark:hover:bg-gray-700">
                                                    <td class="py-4 px-6 text-sm font-medium text-gray-900 whitespace-nowrap dark:text-white">{{ model.name }}</td>
                                                    <td class="py-4 px-6 text-sm font-medium text-gray-500 whitespace-nowrap dark:text-white">{{ model.description }}</td>
                                                    <td class="py-4 px-6 text-sm font-medium text-gray-500 whitespace-nowrap dark:text-white">{{ model.burial }}</td>
                                                    <td class="py-4 px-6 text-sm font-medium text-right whitespace-nowrap">
                                                        <a href="{{ path("manage_model_extras", {"id" : model.id}) }}"
                                                           class="text-slate-600 mr-2 dark:text-slate-500 hover:underline">Appliquer
                                                            des extras</a>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        {% else %}
                                            <tr class="hover:bg-gray-100 dark:hover:bg-gray-700">
                                                <td colspan="5"
                                                    class="py-4 px-6 text-sm font-medium text-gray-900 whitespace-nowrap dark:text-white">
                                                    Vous n'avez pas de modèles pour le moment
                                                </td>
                                            </tr>
                                        {% endif %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="flex flex-row-reverse">
                <a href="{{ path("home_services") }}"
                   class="text-gray-900 hover:text-white border border-gray-800 hover:bg-gray-900 focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:border-gray-600 dark:text-gray-400 dark:hover:text-white dark:hover:bg-gray-600 dark:focus:ring-gray-800">Retour</a>
            </div>
        </div>
    </div>

{% endblock %}
