<div class="items-center md:flex">
    <div class="flex flex-col -mx-4 md:flex-row md:items-center md:mx-8">
        <p
                class="px-2 py-1 mx-2 mt-2 text-sm font-medium text-gray-700 transition-colors duration-200 transform rounded-md md:mt-0 white:text-gray-200">{{ app.user.company.name }}</p>
        <a href="{{ path('company_orders') }}"
           class="px-2 py-1 mx-2 mt-2 text-sm font-medium text-gray-700 transition-colors duration-200 transform rounded-md md:mt-0 white:text-gray-200 hover:bg-gray-300 white:hover:bg-gray-700">Mes
            commandes</a>
        {#        <a href="#" class="px-2 py-1 mx-2 mt-2 text-sm font-medium text-gray-700 transition-colors duration-200 transform rounded-md md:mt-0 white:text-gray-200 hover:bg-gray-300 white:hover:bg-gray-700">pompe funebre</a> #}
    </div>

    <div class="flex justify-center md:block">
        <button type="button"
                class="flex mr-3 text-sm bg-gray-800 rounded-full md:mr-0 focus:ring-4 focus:ring-gray-300 white:focus:ring-gray-600"
                id="user-menu-button" aria-expanded="false" type="button" data-dropdown-toggle="dropdown">
            <span class="sr-only">Open user menu</span>
            {% if app.user.media %}
                <img class="object-cover w-8 h-8 rounded-full" src="{{ vich_uploader_asset(app.user.media) }}">
            {% else %}
                <img class="object-cover w-8 h-8 rounded-full bg-gray-400" src="{{ asset("images/default.svg") }}">
            {% endif %}
        </button>
        <!-- Dropdown menu -->
        <div class="hidden z-50 my-4 text-base list-none bg-white rounded divide-y divide-gray-100 shadow white:bg-gray-700 white:divide-gray-600"
             id="dropdown">
            <div class="py-3 px-4">
                <span class="block text-sm text-gray-900 white:text-white"> {{ app.user.lastname }} {{ app.user.firstname }}</span>
                <span class="block text-sm font-medium text-gray-500 truncate white:text-gray-400">{{ app.user.username }}</span>
            </div>
            <ul class="py-1" aria-labelledby="dropdown">


                <li>
                    <a href="{{ path('app_settings_account') }}"
                       class="block py-2 px-4 text-sm text-gray-700 hover:bg-gray-100 white:hover:bg-gray-600 white:text-gray-200 white:hover:text-white">Paramètres</a>
                </li>

                <hr class="border-gray-200 dark:border-gray-100 ">

                <li>
                    <a href="{{ path('app_logout') }}"
                       class="block py-2 px-4 text-sm text-gray-700 hover:bg-gray-100 white:hover:bg-gray-600 white:text-gray-200 white:hover:text-white">Se
                        déconnecter</a>
                </li>
            </ul>
        </div>
        <button data-collapse-toggle="mobile-menu-2" type="button"
                class="inline-flex items-center p-2 ml-1 text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 white:text-gray-400 white:hover:bg-gray-700 white:focus:ring-gray-600"
                aria-controls="mobile-menu-2" aria-expanded="false">
            <span class="sr-only">Open main menu</span>
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd"
                      d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z"
                      clip-rule="evenodd"></path>
            </svg>
            <svg class="hidden w-6 h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd"
                      d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
                      clip-rule="evenodd"></path>
            </svg>
        </button>
    </div>
</div>