{% extends 'base_front.html.twig' %}

{% block body %}

	{% form_theme form 'form_table_layout.html.twig' %}

	<div class="w-full max-w-lg p-6 m-auto bg-white rounded-md shadow-md dark:bg-gray-800 my-8">
		<h1 class="text-3xl font-semibold text-center text-gray-700 dark:text-white">Déclarer un corps</h1>

		<div class="flex items-center justify-center mt-4">
			<span class="w-1/4 border-b dark:border-gray-500"></span>
		</div>

		{{ form_start(form) }}

		<div class="grid grid-cols-1 gap-6 mt-4 sm:grid-cols-2">

			<div class="text-gray-700 dark:text-gray-300">
				<label class="text-gray-700 dark:text-gray-200" for="username">Ville</label>
				{{ form_widget(form.city , {'attr':
					{'class': 'block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring'}} ) }}

				{{ form_errors(form.city) }}

			</div>

			<div class="text-gray-700 dark:text-gray-300">
				<label class="text-gray-700 dark:text-gray-200" for="emailAddress">Code postal</label>
				{{ form_widget(form.postcode , {'attr':
					{'class': 'block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring'}} ) }}
				{{ form_errors(form.postcode) }}

			</div>

			<div class="text-gray-700 dark:text-gray-300">
				<label class="text-gray-700 dark:text-gray-200">Numéro de l'adresse</label>
				{{ form_widget(form.number , {'attr':
					{'class': 'block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring'}} ) }}
				{{ form_errors(form.number) }}
			</div>

			<div class="text-gray-700 dark:text-gray-300">
				<label class="text-gray-700 dark:text-gray-200">Rue de l'adresse</label>
				{{ form_widget(form.street , {'attr':
					{'class': 'block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring'}} ) }}
				{{ form_errors(form.street) }}
			</div>
		</div>

		{# Submit button #}
		<button type="submit" name="oneTime" class="text-gray-700 dark:text-gray-200 mt-4">Déclarer une adresse</button>
		{% if app.session.get('declareCorpses') != null and app.session.get('declareCorpses')['corpses'] | length > 1 %}
			<button type="submit" name="multipleTimes" class="text-gray-700 dark:text-gray-200 mt-4">Déclarer une autre adresse</button>
		{% endif %}
		{{ form_end(form) }}

		<div class="flex items-center justify-between mt-4">
			<span class="w-full border-b dark:border-gray-500"></span>
		</div>

	</div>


{% endblock %}
