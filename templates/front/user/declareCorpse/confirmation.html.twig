{% extends 'base_front.html.twig' %}

{% block body %}


    <section class="bg-white ">
        <div class="container px-6 py-10 mx-auto">
            <h1 class="text-3xl font-semibold text-gray-800 capitalize lg:text-4xl ">Récapitulatif de votre <span
                        class="underline decoration-blue-500">commande</span></h1>
            {% for corpse in order.corpses %}
                <div class="grid grid-cols-1 gap-8 mt-8 xl:mt-12 xl:gap-12 md:grid-cols-2 xl:grid-cols-3 flex flex-row">
                    <div class="p-8 space-y-3 border-2 border-blue-400  rounded-xl">
                        <span class="inline-block text-blue-500 ">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" fill="none" viewBox="0 0 24 24"
                                 stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z"/>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M9.879 16.121A3 3 0 1012.015 11L11 14H9c0 .768.293 1.536.879 2.121z"/>
                            </svg>
                        </span>

                        <h1 class="text-2xl font-semibold text-gray-700 capitalize ">Cadavre</h1>

                        <p class="text-gray-500 ">

                            {{ corpse.firstname }} {{ corpse.lastname }}
                        </p>
                        <div class="flex items-center mt-4  text-gray-700">
                            <svg class="w-5 h-5 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                <g stroke-width="2" fill="none" stroke="#374151">
                                    <path d="M12 2a5 5 0 1 0 0 10 5 5 0 1 0 0-10Z"></path>
                                    <path fill="none" stroke="#374151" stroke-linecap="round" stroke-linejoin="round"
                                          stroke-width="2"
                                          d="M17 14h.35c1.51 0 2.78 1.12 2.97 2.62l.39 3.12c.14 1.19-.79 2.24-1.99 2.24H5.25c-1.21 0-2.14-1.06-1.99-2.25l.39-3.13c.18-1.51 1.46-2.63 2.97-2.63h.35"></path>
                                </g>
                            </svg>

                            <p class="px-2 text-lg">{{ corpse.sex }}</p>
                        </div>


                        <div class="flex items-center mt-4  text-gray-700">
                            <svg class="w-5 h-5 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                <path fill="none" d="M0 0h24v24H0Z"></path>
                                <g>
                                    <path d="M20.38 8.57l-1.23 1.85v0c1.2 2.4 1.12 5.25-.22 7.58H5.07v0C2.86 14.17 4.17 9.28 8 7.07c2.32-1.35 5.17-1.43 7.57-.23l1.85-1.23v0C12.77 2.62 6.58 3.98 3.6 8.63c-2.02 3.13-2.12 7.12-.27 10.35H3.32c.35.61 1 .99 1.72 1h13.85v0c.71 0 1.38-.38 1.74-1v0c1.87-3.26 1.77-7.29-.27-10.44Z"></path>
                                    <path d="M10.59 15.41v0c.78.78 2.04.78 2.82 0 0-.01 0-.01 0-.01l5.66-8.49 -8.49 5.66v0c-.79.78-.79 2.04-.01 2.82 0 0 0 0 0 0Z"></path>
                                </g>
                            </svg>

                            <p class="px-2 text-lg">Poids : {{ corpse.height }}m Taille: {{ corpse.weight }}kg</p>
                        </div>

                        <div class="flex items-center mt-4  text-gray-700">
                            <svg class="w-5 h-5 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                <path fill="none" d="M0 0h24v24H0V0Z"></path>
                                <path d="M12.68 5.88c.7-.24 1.22-.9 1.3-1.64 .05-.47-.05-.91-.28-1.27L12.42.75c-.19-.33-.67-.33-.87 0l-1.28 2.22c-.17.3-.27.65-.27 1.03 0 1.32 1.3 2.35 2.68 1.88Zm3.85 10.04l-1-1 -1.08 1.07c-1.3 1.3-3.58 1.31-4.89 0l-1.07-1.07 -1.09 1.07C6.75 16.64 5.88 17 4.96 17c-.73 0-1.4-.23-1.96-.61V20c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2v-3.61c-.75.51-1.71.75-2.74.52 -.66-.14-1.25-.51-1.73-.99ZM18 9h-5V8c0-.55-.45-1-1-1s-1 .45-1 1v1H6c-1.66 0-3 1.34-3 3v1.46c0 .85.5 1.67 1.31 1.94 .73.24 1.52.06 2.03-.46l2.14-2.13 2.13 2.13c.76.76 2.01.76 2.77 0l2.14-2.13 2.13 2.13c.43.43 1.03.63 1.65.55 .99-.13 1.69-1.06 1.69-2.06v-1.42C21 10.34 19.66 9 18 9Z"></path>
                            </svg>

                            <p class="px-2 text-lg">{{ corpse.birthdate | date("d/m/Y") }}</p>
                        </div>

                        <div class="flex items-center mt-4  text-gray-700">
                            <svg class="w-5 h-5 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                <g stroke-linecap="round" stroke-width="2" stroke="#000" fill="none"
                                   stroke-linejoin="round">
                                    <path d="M18 3l4-1 -1 4L11 16l-2.5-.5L8 13 18 3Z"></path>
                                    <path d="M2 20l2 2"></path>
                                    <path d="M5 14l1 4 4 1"></path>
                                    <path d="M6 18l-3 3"></path>
                                </g>
                            </svg>

                            <p class="px-2 text-lg"> {{ corpse.dayOfDeath | date("d/m/Y H:s:i") }}</p>
                        </div>

                        <div class="flex items-center mt-4  text-gray-700">
                            <svg class="w-5 h-5 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                <path fill="none" d="M0 0h24v24H0Z"></path>
                                <g>
                                    <path d="M21 5c-1.11-.35-2.33-.5-3.5-.5 -1.95 0-4.05.4-5.5 1.5 -1.45-1.1-3.55-1.5-5.5-1.5 -1.95 0-4.05.4-5.5 1.5v14.65c0 .25.25.5.5.5 .1 0 .15-.05.25-.05C3.1 20.45 5.05 20 6.5 20c1.95 0 4.05.4 5.5 1.5 1.35-.85 3.8-1.5 5.5-1.5 1.65 0 3.35.3 4.75 1.05 .1.05.15.05.25.05 .25 0 .5-.25.5-.5V6c-.6-.45-1.25-.75-2-1Zm0 13.5c-1.1-.35-2.3-.5-3.5-.5 -1.7 0-4.15.65-5.5 1.5V8c1.35-.85 3.8-1.5 5.5-1.5 1.2 0 2.4.15 3.5.5v11.5Z"></path>
                                    <path d="M17.5 10.5c.88 0 1.73.09 2.5.26V9.24c-.79-.15-1.64-.24-2.5-.24 -1.7 0-3.24.29-4.5.83v1.66c1.13-.64 2.7-.99 4.5-.99Z"></path>
                                    <path d="M13 12.49v1.66c1.13-.64 2.7-.99 4.5-.99 .88 0 1.73.09 2.5.26V11.9c-.79-.15-1.64-.24-2.5-.24 -1.7 0-3.24.3-4.5.83Z"></path>
                                    <path d="M17.5 14.33c-1.7 0-3.24.29-4.5.83v1.66c1.13-.64 2.7-.99 4.5-.99 .88 0 1.73.09 2.5.26v-1.52c-.79-.16-1.64-.24-2.5-.24Z"></path>
                                </g>
                            </svg>
                            <p class="px-2 text-lg">Cause : {{ corpse.causeOfDeath }}</p>
                        </div>

                        <a href="{{ path('edit_corpse_declaration', {id: corpse.id}) }}">
                            <button type="button"
                                    class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">
                                Editer le corps
                            </button>
                        </a>
                    </div>
                </div>

            {% endfor %}
            <div class="grid grid-cols-1 gap-8 mt-8 xl:mt-12 xl:gap-12 md:grid-cols-2 xl:grid-cols-3 flex flex-row">
                <div class="p-8 space-y-3 border-2 border-blue-400  rounded-xl">
                    <span class="inline-block text-blue-500 ">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" fill="none" viewBox="0 0 24 24"
                             stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
                        </svg>
                    </span>
                    <h1 class="text-2xl font-semibold text-gray-700 capitalize ">Adresse</h1>
                    <p>{{ address.city }}</p>
                    <p>{{ address.number }} {{ address.street }} {{ address.postcode }}</p>
                </div>
            </div>
            <div class="ml-1 mt-4">
                <a href="{{ path('declare_corpse_confirmation', {cancel: 'true'}) }}">
                    <button class="px-4 py-2 font-medium tracking-wide text-white capitalize transition-colors duration-200 transform bg-red-600 text-white-300 rounded-md hover:bg-blue-500 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-80">
                        Annuler
                    </button>
                </a>
                <a href="{{ path('declare_corpse_confirmation', {confirm: 'true'}) }}">
                    <button class="px-4 py-2 font-medium tracking-wide text-white transition-colors duration-200 transform bg-green-600 text-white-300 rounded-md hover:bg-blue-500 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-80">
                        Déclarer les corps
                    </button>
                </a>
            </div>
        </div>
    </section>
{% endblock %}
