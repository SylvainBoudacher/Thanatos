{% extends 'base_front.html.twig' %}


{% block body %}
    {{ include('components/corpseRecapReference.html.twig') }}

    <div class="grid place-content-center place-items-center">

        <h1 class="text-4xl m-3 mb-5 ">Selection d'une pompe funèbre </h1>
        <h2 class="text-xl mt-4 text-stone-500 mb-5">Total de pompe funèbre <span
                    class="text-blue-600	">{{ pagination.getTotalItemCount }}</span></h2>
        <div class="grid grid-cols-4 gap-3 p-8">

            {% for company in pagination %}
                <div class="shadow-md px-3 py-3 rounded-lg">
                    <a href="{{ path('user_order_product', {corpse: corpse.id , company: company.id}) }}">
                        <div>
                            <img class="object-cover w-full h-64 rounded-lg h-36 mb-2"
                                 src="  {{ company.media ? vich_uploader_asset(company.media) : asset('images/company-default.png') }}"
                                 alt="Article">
                            <div class="flex gap-x-5">
                                <h3 class="capitalize text-xl">{{ company.name }}
                                </h3>

                                <p class="self-center shadow-md bg-blue-900 text-gray-10e0 rounded-full p-1">4.2</p>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}

        </div>
        <nav class="mt-3 mb-12">
            {{ knp_pagination_render(pagination) }}
        </nav>
    </div>

{% endblock %}
