{% extends 'base_front.html.twig' %}

{% block body %}
    {{ include('components/corpseRecapReference.html.twig') }}

    <div class="grid place-content-center place-items-center">
        <h1 class="text-4xl m-3">Selection d'un thème</h1>

        {# CLASSIC THEMES #}
        <h1 class="border-b border-slate-700 text-center uppercase text-lg font-bold w-64 my-8">Classique</h1>

        <div class="flex flex-row flex-wrap gap-5 justify-center">
            {% if themesClassic %}
                {% for theme in themesClassic %}
                    {# CARD #}

                    <div class="relative flex flex-col h-[400px] w-[325px] bg-gradient-to-b from-[#4031B3] to-indigo-500 p-4 pt-8 px-6 m-2 my-4 rounded-xl shadow-lg">
                        <div>
                            {% if loop.last %}
                                <div class="absolute px-4 py-2 -top-5 left-[50%] -translate-x-[50%] bg-red-200 rounded-xl">
                                    Le plus populaire
                                </div>
                            {% endif %}
                            <div class="text-slate-50 font-extralight text-md">
                                <span>à partir de</span>
                                <span class="text-3xl font-bold">{{ (theme.price)|number_format(0, '.', ' ') }}
                                    €</span>

                                {% if theme.name == "Vers l'infinie et l'au dela !" %}
                                    <span class="font-bold text-sm">/ kg</span>
                                {% endif %}
                            </div>
                            <h3 class="text-slate-50 font-bold text-2xl mb-2">{{ theme.name }}</h3>
                            <span class="text-slate-50 font-bold text-sm mt-1 bg-blue-500 px-3 py-1 rounded-full">Classique</span>
                            <p class="text-slate-50 text-md mt-3 min-h-[100px] max-h-[101px] w-full break-all ">{{ theme.description }}</p>

                                <div class="flex flex-row justify-center relative mt-12">
                                    <a class="py-2 px-6 bg-[#F6DFEE] text-[#4031B3] rounded-2xl mt-10 mx-2"
                                       href="{{ path('user_order_theme', {corpse: corpse.id, theme: theme.id}) }}">
                                        Selectionner
                                        <svg class="ml-2 -mr-1 w-4 h-4 inline" fill="currentColor" viewBox="0 0 20 20"
                                             xmlns="http://www.w3.org/2000/svg">
                                            <path fill-rule="evenodd"
                                                  d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                                                  clip-rule="evenodd"></path>
                                        </svg>
                                    </a>
                                </div>
                            </div>
                    </div>

                {% endfor %}
            {% else %}
                <p>Aucun thème disponible de type classique</p>
            {% endif %}
        </div>

        {# SPECIAL THEMES #}
        <h1 class="border-b border-slate-700 text-center uppercase text-lg font-bold w-64 my-8">Spéciales</h1>

        <div class="flex flex-row flex-wrap gap-5 justify-center">
            {% if themesClassic %}
                {% for theme in themesSpecial %}
                    {# CARD #}

                    <div class="relative flex flex-col h-[400px] w-[325px] bg-gradient-to-b from-[#4031B3] to-indigo-500 p-4 pt-8 px-6 m-2 my-4 rounded-xl shadow-lg">
                        <div>
                            {% if loop.last %}
                                <div class="absolute px-4 py-2 -top-5 left-[50%] -translate-x-[50%] bg-red-200 rounded-xl">
                                    Le plus populaire
                                </div>
                            {% endif %}
                            <div class="text-slate-50 font-extralight text-md">
                                <span>à partir de</span>
                                <span class="text-3xl font-bold">{{ (theme.price)|number_format(0, '.', ' ') }}
                                    €</span>

                                {% if theme.name == "Vers l'infinie et l'au dela !" %}
                                    <span class="font-bold text-sm">/ kg</span>
                                {% endif %}
                            </div>
                            <h3 class="text-slate-50 font-bold text-2xl mb-2">{{ theme.name }}</h3>
                            <span class="text-slate-50 font-bold text-sm mt-1 bg-orange-600 px-3 py-1 rounded-full">Spécial</span>
                            <p class="text-slate-50 text-md mt-3 min-h-[100px] max-h-[101px] ">{{ theme.description }}</p>


                            <div class="flex flex-row justify-center relative mt-12">
                                <a class="py-2 px-6 bg-[#F6DFEE] text-[#4031B3] rounded-2xl mt-10 mx-2"
                                   href="{{ path('user_order_theme', {corpse: corpse.id, theme: theme.id}) }}">
                                    Selectionner
                                    <svg class="ml-2 -mr-1 w-4 h-4 inline" fill="currentColor" viewBox="0 0 20 20"
                                         xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd"
                                              d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                                              clip-rule="evenodd"></path>
                                    </svg>
                                </a>
                            </div>

                        </div>

                    </div>

                {% endfor %}
            {% else %}
                <p>Aucun thème disponible de type spécial</p>
            {% endif %}

        </div>

    </div>
{% endblock %}
