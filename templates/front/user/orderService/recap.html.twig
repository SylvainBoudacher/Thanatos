{% extends 'base_front.html.twig' %}

{% block body %}

    <div class="p-3 h-full grid place-items-center">

        <h1 class="text-4xl mb-3">
            Récapitulatif
        </h1>

        <h2 class="text-2xl text-blue-700 mb-12">Prix total
            <span class="underline decoration-blue-500">{{ preparation.price }}€</span>
        </h2>

        <div class="flex flex-row gap-4 justify-around items-start">
            <div class="p-4 w-1/4 bg-white rounded-lg border shadow-md sm:p-8 dark:bg-gray-800 dark:border-gray-700">
                <div class="flex items-baseline text-gray-900 dark:text-white">
                    <span class="text-5xl font-extrabold tracking-tight">
                        Corps
                    </span>
                </div>

                <ul role="list" class="my-7 space-y-5">
                    <li class="flex space-x-3">
                        <span class="text-base font-normal leading-tight text-gray-500 dark:text-gray-400"> {{ corpse.firstname }} {{ corpse.lastname }}
                        </span>
                    </li>
                    <li class="flex space-x-3">
                        <span class="text-base font-normal leading-tight text-gray-500 dark:text-gray-400">
                            Année de naissance : {{ corpse.birthdate | date('l d F Y') }}
                        </span>
                    </li>
                    <li class="flex space-x-3">
                        <span class="text-base font-normal leading-tight text-gray-500 dark:text-gray-400">
                            Date de son décès : {{ corpse.dayOfDeath | date('l d F Y') }}
                        </span>
                    </li>
                    <li class="flex space-x-3">
                        <span class="text-base font-normal leading-tight text-gray-500 dark:text-gray-400">
                            Sexe de la personne : {{ corpse.sex }}
                        </span>
                    </li>
                    <li class="flex space-x-3">
                        <p class="text-base font-normal leading-tight text-gray-500 dark:text-gray-400">
                            Cause de la mort :
                            <span>{{ corpse.causeOfDeath }}</span>
                        </p>
                    </li>

                    <li class="flex space-x-3">
                        <span class="text-base font-normal leading-tight text-gray-500 dark:text-gray-400">
                            Taille / Poids : {{ corpse.height }}m / {{ corpse.weight }}kg
                        </span>
                    </li>

                </ul>
            </div>
            <div class="p-4 w-1/4 bg-white rounded-lg border shadow-md sm:p-8 dark:bg-gray-800 dark:border-gray-700">
                <div class="flex items-baseline text-gray-900 dark:text-white">
                    <span class="text-5xl font-extrabold tracking-tight">
                        Theme
                    </span>
                </div>

                <ul role="list" class="my-7 space-y-5">
                    <li class="flex space-x-3">
                        <span class="text-base font-normal leading-tight text-gray-500 dark:text-gray-400"> {{ preparation.theme.name }}
                        </span>
                    </li>
                    <li class="flex space-x-3">
                        <span class="text-base font-normal leading-tight text-gray-500 dark:text-gray-400">
                            Prix : {{ preparation.theme.price }}
                        </span>
                    </li>
                    <li class="flex space-x-3">
                        <span class="text-base font-normal leading-tight text-gray-500 dark:text-gray-400">
                            Description :
                            <br> <span>{{ preparation.theme.description }}</span>
                        </span>
                    </li>

                    <li class="flex space-x-3">
                        <img class="rounded-t-lg" src="{{ asset('images/theme-default.png') }}"
                             alt="Image de ">
                    </li>
                </ul>
            </div>

            {% if preparation.theme.type == constant('TYPE_CLASSIC', preparation.theme) %}
                <div class="p-4 w-1/4 bg-white rounded-lg border shadow-md sm:p-8 dark:bg-gray-800 dark:border-gray-700">
                    <div class="flex items-baseline text-gray-900 dark:text-white">
                        <span class="text-5xl font-extrabold tracking-tight">
                            Morgue
                        </span>
                    </div>

                    <ul role="list" class="my-7 space-y-5">
                        <li class="flex space-x-3">
                            <span class="text-base font-normal leading-tight text-gray-500 dark:text-gray-400"> {{ company.name }}
                            </span>
                        </li>
                        <li class="flex space-x-3">
                            <span class="text-base font-normal leading-tight text-gray-500 dark:text-gray-400">
                                Description :
                                <br> <span>{{ company.description }}</span>
                            </span>
                        </li>

                        <li class="flex space-x-3">
                            <img class="rounded-t-lg" src="{{ asset('images/company-default.png') }}"
                                 alt="Image de">
                        </li>
                    </ul>
                </div>

                <div class="p-4 w-1/4 bg-white rounded-lg border shadow-md sm:p-8 dark:bg-gray-800 dark:border-gray-700">
                    <div class="flex items-baseline text-gray-900 dark:text-white">
                        <span class="text-5xl font-extrabold tracking-tight">
                            Cerceuil
                        </span>
                    </div>

                    <ul role="list" class="my-7 space-y-5">
                        <li class="flex space-x-3">
                            <span class="text-base font-normal leading-tight text-gray-500 dark:text-gray-400">{{ preparation.modelExtra.model.name }}
                            </span>
                        </li>
                        <li class="flex space-x-3">
                            <span class="text-base font-normal leading-tight text-gray-500 dark:text-gray-400">
                                Description :
                                <br> <span>{{ preparation.modelExtra.model.description }}</span>
                            </span>
                        </li>

                        <li class="flex space-x-3">
                            <img class="rounded-t-lg" src="{{ asset('images/model-default.png') }}"
                                 alt="Image de">
                        </li>

                        <li class="flex space-x-3">
                            <span class="text-base font-normal leading-tight text-gray-500 dark:text-gray-400">
                                Matériau : {{ preparation.modelMaterial.material.name }}
                            </span>
                        </li>
                        <li class="flex space-x-3">
                            <div class="rounded-t-lg h-40 w-40 rounded"
                                 style="background-color: {{ preparation.painting.hexaCode }}"></div>
                        </li>
                        <li class="flex space-x-3">
                            <span class="text-base font-normal leading-tight text-gray-500 dark:text-gray-400">
                                Couleur : {{ preparation.painting.name }}
                            </span>
                        </li>
                        <li class="flex space-x-3">
                            <img class="rounded-t-lg" src="{{ asset('images/material-default.png') }}"
                                 alt="Image de">
                        </li>
                        <li class="flex space-x-3">
                            <span class="text-base font-normal leading-tight text-gray-500 dark:text-gray-400">
                                Extra : {{ preparation.modelExtra.extra.name }}
                            </span>
                        </li>
                        <li class="flex space-x-3">
                            <img class="rounded-t-lg" src="{{ asset('images/extra-default.png') }}"
                                 alt="Image de">
                        </li>
                    </ul>
                </div>
            {% endif %}
        </div>

        <a href="{{ path('user_order_recap', {corpse: corpse.id, confirm: 'true'}) }}">
            <button type="button"
                    class="mt-4 text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-200 dark:focus:ring-blue-900 font-medium rounded-lg text-sm px-5 py-2.5 inline-flex justify-center w-full text-center">
                Confirmer la commande
            </button>
        </a>

        <a href="{{ path('user_order_recap', {corpse: corpse.id, cancel: 'true'}) }}">
            <button type="button"
                    class="mt-1 focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900 w-full">
                Annuler la commande
            </button>
        </a>

    </div>
{% endblock %}
