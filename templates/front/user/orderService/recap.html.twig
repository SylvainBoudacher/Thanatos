{% extends 'base_front.html.twig' %}


{% block body %}

    <div class="p-5">
        <h1 class="text-4xl mb-3">Récapitulatif</h1>
        <div class="flex flex-row gap-3 flex-wrap justify-around">

            <div class="p-4 max-w-sm bg-white rounded-lg border shadow-md sm:p-8 dark:bg-gray-800 dark:border-gray-700">
                <div class="flex items-baseline text-gray-900 dark:text-white">
                    <span class="text-5xl font-extrabold tracking-tight">Corps</span>
                </div>

                <ul role="list" class="my-7 space-y-5">
                    <li class="flex space-x-3">
                        <span class="text-base font-normal leading-tight text-gray-500 dark:text-gray-400">{{ corpse.firstname }} {{ corpse.lastname }}</span>
                    </li>
                    <li class="flex space-x-3">
                        <span class="text-base font-normal leading-tight text-gray-500 dark:text-gray-400">Année de naissance {{ corpse.birthdate | date('Y-m-d') }}</span>
                    </li>
                    <li class="flex space-x-3">
                        <span class="text-base font-normal leading-tight text-gray-500 dark:text-gray-400">Année de mort {{ corpse.dayOfDeath | date('Y-m-d H:i:s') }}</span>
                    </li>
                    <li class="flex space-x-3">
                        <span class="text-base font-normal leading-tight text-gray-500 dark:text-gray-400">Sexe de la personne {{ corpse.sex }}</span>
                    </li>
                    <li class="flex space-x-3">
                        <span class="text-base font-normal leading-tight text-gray-500 dark:text-gray-400">Cause de la mort : <br>{{ corpse.causeOfDeath }}</span>
                    </li>

                    <li class="flex space-x-3">
                        <span class="text-base font-normal leading-tight text-gray-500 dark:text-gray-400">Taille / Poids : {{ corpse.height }}m / {{ corpse.weight }}Kg</span>
                    </li>

                </ul>
            </div>
            <div class="p-4 max-w-sm bg-white rounded-lg border shadow-md sm:p-8 dark:bg-gray-800 dark:border-gray-700">
                <div class="flex items-baseline text-gray-900 dark:text-white">
                    <span class="text-5xl font-extrabold tracking-tight">Theme</span>
                </div>

                <ul role="list" class="my-7 space-y-5">
                    <li class="flex space-x-3">
                        <span class="text-base font-normal leading-tight text-gray-500 dark:text-gray-400">{{ theme.name }}</span>
                    </li>
                    <li class="flex space-x-3">
                        <span class="text-base font-normal leading-tight text-gray-500 dark:text-gray-400"> Prix : {{ theme.price }}</span>
                    </li>
                    <li class="flex space-x-3">
                        <span class="text-base font-normal leading-tight text-gray-500 dark:text-gray-400">Description : <br>{{ theme.description }}</span>
                    </li>

                    <li class="flex space-x-3">
                        {% if theme.media %}
                            <img class="rounded-t-lg" src="{{ vich_uploader_asset(theme.media) }}"
                                 alt="Image de {{ theme.name }}">
                        {% else %}
                            <img class="rounded-t-lg" src="{{ asset('images/theme-default.png') }}"
                                 alt="Image de {{ theme.name }}">
                        {% endif %}
                    </li>
                </ul>
            </div>
            <div class="p-4 max-w-sm bg-white rounded-lg border shadow-md sm:p-8 dark:bg-gray-800 dark:border-gray-700">
                <div class="flex items-baseline text-gray-900 dark:text-white">
                    <span class="text-5xl font-extrabold tracking-tight">Morgue</span>
                </div>

                <ul role="list" class="my-7 space-y-5">
                    <li class="flex space-x-3">
                        <span class="text-base font-normal leading-tight text-gray-500 dark:text-gray-400">{{ company.name }}</span>
                    </li>
                    <li class="flex space-x-3">
                        <span class="text-base font-normal leading-tight text-gray-500 dark:text-gray-400">Description : <br>{{ company.description }}</span>
                    </li>

                    <li class="flex space-x-3">
                        {% if company.media %}
                            <img class="rounded-t-lg" src="{{ vich_uploader_asset(company.media) }}"
                                 alt="Image de {{ company.name }}">
                        {% else %}
                            <img class="rounded-t-lg" src="{{ asset('images/company-default.png') }}"
                                 alt="Image de {{ company.name }}">
                        {% endif %}
                    </li>
                </ul>
            </div>
            <div class="p-4 max-w-sm bg-white rounded-lg border shadow-md sm:p-8 dark:bg-gray-800 dark:border-gray-700">
                <div class="flex items-baseline text-gray-900 dark:text-white">
                    <span class="text-5xl font-extrabold tracking-tight">Morgue</span>
                </div>

                <ul role="list" class="my-7 space-y-5">
                    <li class="flex space-x-3">
                        <span class="text-base font-normal leading-tight text-gray-500 dark:text-gray-400">{{ company.name }}</span>
                    </li>
                    <li class="flex space-x-3">
                        <span class="text-base font-normal leading-tight text-gray-500 dark:text-gray-400">Description : <br>{{ company.description }}</span>
                    </li>

                    <li class="flex space-x-3">
                        {% if company.media %}
                            <img class="rounded-t-lg" src="{{ vich_uploader_asset(company.media) }}"
                                 alt="Image de {{ company.name }}">
                        {% else %}
                            <img class="rounded-t-lg" src="{{ asset('images/company-default.png') }}"
                                 alt="Image de {{ company.name }}">
                        {% endif %}
                    </li>
                </ul>
            </div>

        </div>

        <a href="{{ path('co') }}">
        <button type="button" class="mt-4 text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-200 dark:focus:ring-blue-900 font-medium rounded-lg text-sm px-5 py-2.5 inline-flex justify-center w-full text-center">Confirmer la commande</button>
        </a>
    </div>
{% endblock %}
